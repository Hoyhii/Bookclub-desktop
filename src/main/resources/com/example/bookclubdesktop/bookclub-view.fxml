<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/16" fx:controller="com.example.bookclubdesktop.BookclubController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Button onAction="#tiltasClick" text="Tiltás/Tiltás visszavonása" />
    <TableView fx:id="members" prefHeight="200.0" prefWidth="500.0" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="name" minWidth="200.0" prefWidth="200.0" text="Név" />
            <TableColumn fx:id="gender" minWidth="100.0" prefWidth="150.0" text="Nem" />
            <TableColumn fx:id="birthday" minWidth="75.0" prefWidth="75.0" text="Születésnap" />
            <TableColumn fx:id="banned" minWidth="75.0" prefWidth="75.0" text="Kitiltva" />
        </columns>
    </TableView>
</VBox>